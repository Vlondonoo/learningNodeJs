<!DOCTYPE html>
<html lang="en">

<head>
    <style>
        body {
            background: rgb(0, 207, 243);
            font-family: verdana;
            color: #fff
        }
        
        h1 {
            font-size: 48px;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-align: center;
        }
        
        h2 {
            font-size: 30px;
            text-transform: uppercase;
            letter-spacing: 2px;
            text-align: center;
        }
        
        p,
        li {
            font-size: 16px;
            text-align: center;
        }
    </style>
</head>

<body>
    <h1>
        Welcome to the profile of
        <%= person %>
    </h1>
    <p>
        <strong>Age :</strong>
        <%= data.age %>
            <strong>Job :</strong>
            <%= data.job %>
                <h2>
                    Hobbies
                </h2>
                <ul>
                    <% data.hobbies.forEach(function(item){ %>
                        <li>
                            <%= item %>
                        </li>
                        <%  }); %>
                </ul>
    </p>
</body>

</html>